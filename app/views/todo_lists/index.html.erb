<body>
  <div class="jumbotron" id="main-header">
    <h1>Welcome to Just Todo It!</h1>
    <h3>Just one of many todo apps that are out there!</h3><br>
    <div class="links">
      <%= button_tag "Create A New Todo List", :type => 'button', :class => "btn btn-lg btn-primary", :onclick => "location.href = '#{new_todo_list_path}'" %>
    </div>
  </div>
<div class="container">

  <% @todo_lists.each do |todo_list| %>
    <div class="todo-lists">
      <h2 class="todo_list_title"><%= link_to todo_list.title, todo_list %></h2>
      <h4 class="todo_list_sub_title"><%= todo_list.description %></h4>
    </div>
  <% end %>

</div>
